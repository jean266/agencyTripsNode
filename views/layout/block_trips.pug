
.row.next-trips 
            each trip in trips 
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        img.card-img-top(src=`img/destinos_${trip.imagen}.jpg`)
                        .card-body
                            h2= trip.titulo
                            p 
                                svg.icon.icon-tabler.icon-tabler-calendar(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z')
                                    path(d='M16 3v4')
                                    path(d='M8 3v4')
                                    path(d='M4 11h16')
                                    path(d='M11 15h1')
                                    path(d='M12 15v3')

                                | #{trip.fecha_ida} / #{trip.fecha_vuelta}
                            
                            p
                                svg.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0')
                                    path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')

                                | #{trip.disponibles} Disponibles

                            p= trip.descripcion.substr(0, 100) + "..."

                            a(href=`viajes/${trip.slug}`, class="btn btn-success btn-block") Más Infomación