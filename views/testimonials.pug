
extends ./layout/index

block content
    main.container.mt-5 
        h1.text-center.mt-5= page

        blockquote.text-center Lee Sobre nuestros clientes y sus experiencias
        include ./layout/block_testimonials

        .row

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if(mistakes)
                    each error in mistakes  
                        .alert.col.alert-danger.text-center= error.message

            .row.justify-content-center.col
                .col-md-8 
                    form(action="" method="POST")
                        .form-group     
                            label(for="name") Nombre 
                            input#name(type="text", placeholder="Tu Nombre", name="name", class="form-control", value= name)
                        .form-group     
                            label(for="email") Correo Electr√≥nico 
                            input#email(type="email", placeholder="Tu Correo", name="email", class="form-control", value= email)
                        .form-group     
                            label(for="message") Mensaje
                            textarea#message(name="message", class="form-control", placeholder="Tu mensaje", rows= 3)= message
                        
                        input.btn.btn-success.btn-block(type="submit")


